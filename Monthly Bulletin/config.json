{
  "name": "monthly-bulletin",
  "description": "Generates monthly community bulletin for Wharfside Manor as HTML email with nautical theme",
  "version": "3.0",

  "mcp_servers": [
    "gmail"
  ],

  "schedule": {
    "cron": "0 9 25 * *",
    "description": "9:00 AM on the 25th of every month",
    "timezone": "America/New_York"
  },

  "gmail": {
    "account": "nickd@wharfsidemb.com",
    "lookback_days": 30
  },

  "logo": {
    "url": "https://raw.githubusercontent.com/nickdnj/ClaudeAgents/main/Wharfside_Logo.png",
    "alt_text": "Wharfside Manor",
    "width": "160px",
    "local_path": "Wharfside_Logo.png"
  },

  "email": {
    "to": "nickd@wharfsidemb.com",
    "subject_format": "{month} {year} Monthly Bulletin - Draft v{version}",
    "mime_type": "text/html"
  },

  "notifications": {
    "email": "nickd@wharfsidemb.com",
    "templates": {
      "new_draft": {
        "subject": "{month} {year} Monthly Bulletin - Draft v{version}",
        "note": "HTML bulletin is sent directly as the email body"
      },
      "published_for_review": {
        "subject": "{month} {year} Monthly Bulletin - v{version} FOR BOARD REVIEW",
        "note": "Same bulletin with updated subject line indicating board review status"
      }
    }
  },

  "versioning": {
    "draft_prefix": "0.",
    "release_version": "1.0",
    "statuses": {
      "draft": "Draft",
      "published": "For Board Review",
      "released": "Final"
    }
  },

  "location": {
    "name": "Wharfside Manor",
    "city": "Monmouth Beach",
    "state": "New Jersey",
    "tagline": "Monmouth Beach, New Jersey"
  },

  "styling": {
    "theme": "nautical",
    "font_family": "'Georgia', serif",
    "max_width": "720px",
    "colors": {
      "navy_dark": "#1a3a5c",
      "navy_light": "#2c5f7c",
      "gold": "#c9a227",
      "seafoam": "#e8f4f8",
      "seafoam_dark": "#d4e6ec",
      "ocean_blue": "#5dade2",
      "teal": "#1abc9c",
      "sand": "#f8f4e8",
      "sand_dark": "#f0e8d8",
      "coral": "#e74c3c",
      "text_primary": "#2c3e50"
    },
    "decorative": {
      "anchor_emoji": "âš“",
      "wave_emoji": "ðŸŒŠ",
      "divider": "âš“ âš“ âš“"
    }
  }
}
